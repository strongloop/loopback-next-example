{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/loopback-next/packages/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "inlineSources": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "**/*.d.ts"
  ]
}