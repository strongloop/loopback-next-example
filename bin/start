#!/usr/bin/env bash

# First stop if anything
echo "Stopping service if any running..."
ps -ef | grep "[i]ndex.ts" | awk '{print $2}' | xargs kill -9

echo "Installing..."
cd services/account
npm i
npm link loopback-next
cd ../customer
npm i
npm link loopback-next
cd ../transaction
npm i
npm link loopback-next
cd ../facade
npm i
npm link loopback-next

echo "Starting services..."

cd ../account
ts-node index.ts &

cd ../customer
ts-node index.ts &

cd ../transaction
ts-node index.ts &

sleep 5
cd ../facade
ts-node index.ts &
sleep 5

echo "Started all services!!"
echo "To run the app, execute: "
echo "./bin/get-account-summary"
echo "./bin/get-account"
